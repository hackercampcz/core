{% extends 'layouts/application.njk' %}
{% block title %}Program Campu{% endblock %}
{% block head %}
<style>
  html {
    scroll-behavior: smooth;
  }

  /* unstick navbar and allow to scroll off */
  .hc-navbar {
    position: relative !important;
  }
  #top {
    padding-top: 0;
  }

  #program-root {
    box-sizing: border-box;
    min-height: 90vh;

    display: flex;
    flex-direction: column;
  }

  form h2 {
    margin-left: auto;
    margin-right: auto;
  }

  form p.disclaimer {
    text-align: center;
    font-size: 14px;
    padding: 24px;
  }

  form section {
    margin-bottom: 24px;
  }

  form section p {
    text-align: center;
  }

  form h3 {
    font-size: 16px;
  }

  .section-story {
    font-size: 14px;
  }

  form input,
  form select {
    font-family: var(--hc-font-family);
    font-size: 16px;
    letter-spacing: 0;
    line-height: 1.5;
    font-kerning: normal;
    font-variant-numeric: lining-nums slashed-zero;
    font-variant-ligatures: common-ligatures contextual;
    -webkit-font-feature-settings: "kern", "liga", "clig", "calt", "lnum", "zero";
    font-feature-settings: "kern", "liga", "clig", "calt", "lnum", "zero";
    -webkit-text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: geometricPrecision;
  }

  form .field {
    display: flex;
    flex-direction: column;
    padding-bottom: 4px;
    flex: 1;
  }

  form [aria-hidden="true"] {
    display: none;
  }

  form .field label {
    flex: 1;
    padding-top: 4px;
    padding-bottom: 2px;
  }

  form .field input,
  form .field textarea,
  form .field select {
    flex: 2;
    font-size: 16px;
    padding: 4px;
  }

  form .field select {
    min-height: 36px;
  }

  form .field--block {
    margin-bottom: 16px;
  }

  form .group {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 490px) {
    form .group {
      gap: 8px;
      flex-direction: row;
    }
  }

  form .question {
    text-align: center;
    padding-top: 12px;
  }

  form .question input {
    width: 16px;
    height: 16px;
  }

  form .choose {
    display: flex;
  }

  form .choose:not(:last-child) {
    margin-bottom: 24px;
  }

  form .choose input {
    width: 16px;
    height: 16px;
  }

  form .choose > label,
  form .choose > div {
    padding-left: 8px;
    display: block;
    flex: 1;
  }

  form .choose input:not(:checked) + div .patron-allowance {
    display: none;
  }

  form .choose .patron-allowance input {
    width: 120px;
  }

  form label span {
    display: block;
    font-size: 14px;
  }

  body.has-open-dialog {
    overflow: hidden;
  }
</style>
<script src="https://cdn.jsdelivr.net/gh/nuxodin/dialog-polyfill@x.x.x/dialog.min.js" type="module"></script>
{% endblock %}

{% block content %}
<div id="program-root"></div>
{% endblock %}

{% block javascript %}
<script type="module">
  import { main } from "/assets/esm/program.js?2";

  main({
    rootElement: document.querySelector("#program-root"),
    env: {{ build | dump(8) | safe }},
  });
</script>
{% endblock %}
