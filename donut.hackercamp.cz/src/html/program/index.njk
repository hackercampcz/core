{% extends 'layouts/application.njk' %}
{% block title %}Program Campu{% endblock %}
{% block head %}
<style>
  html {
    scroll-behavior: smooth;
  }

  /* unstick navbar and allow to scroll off */
  .hc-navbar {
    position: relative !important;
  }
  #top {
    padding-top: 0;
  }

  #program-root {
    box-sizing: border-box;
    min-height: 90vh;

    display: flex;
    flex-direction: column;
  }

</style>
<script src="https://cdn.jsdelivr.net/gh/nuxodin/dialog-polyfill@x.x.x/dialog.min.js" type="module"></script>
<meta name="referrer" content="unsafe-url">
{% endblock %}

{% block content %}
<div id="program-root"></div>
{% endblock %}

{% block javascript %}
<script type="module">
  import { main } from "/assets/esm/program.js?2023.1";

  const build = {{ build | dump(8) | safe }};
  const env = Object.assign({ year: {{ year }} }, build);
  main({
    rootElement: document.querySelector("#program-root"),
    env,
  });
</script>
{% endblock %}
