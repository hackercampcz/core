{% extends "layouts/application.njk" %}

{% block title %}Administrace Hacker Campu{% endblock %}

{% block head %}
  <link rel="preload" href="https://fonts.googleapis.com/css?family=Material+Icons&display=block" as="style"
        type="text/css">
  <style>
    #top {
      padding-top: 62px;
    }

    table {
      font-size: 14px;
      border-collapse: collapse;
    }

    th, td {
      padding: 8px;
    }

    thead {
      background-color: var(--hc-background-color);
      border-bottom: 3px double #ddd;
    }

    thead th {
      text-align: left;
    }

    tbody tr:hover {
      background-color: var(--hc-row-highlight);
    }

    tbody td {
      border-bottom: 1px solid #ddd;
    }

    .hc-master-detail__list {
      --hc-viewport-compensation: 242px;
      padding: 0;
      position: relative;
      overflow-y: scroll;
      flex-shrink: 0;
      max-height: calc(100vh - var(--hc-viewport-compensation));
    }

    .hc-master-detail__list table {
      width: 100%;
    }

    .hc-master-detail__list thead {
      position: sticky;
      top: 0;
      border-bottom: none;
    }

    .hc-master-detail__list thead th::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      border-bottom: 3px double #ddd;
    }

    @media screen and (max-width: 479px) {
      #top {
        padding-top: 48px;
      }
    }

    @media (min-width: 840px) {
      .hc-master-detail {
        display: flex;
      }

      .hc-master-detail__list {
        --hc-viewport-compensation: 212px;
        min-width: 33%;
        max-width: 50%;
      }

      .hc-master-detail__detail {
        min-width: 33%;
        transition: width .2s ease-out;
        z-index: 10;
      }
    }
  </style>

  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Material+Icons&amp;display=block"
  />
{% endblock %}

{% block content %}
  <mwc-drawer id="drawer" type="dismissible" style="margin-top: 2em">
    <mwc-list>
      <mwc-list-item><a href="/admin/?view=attendees">Účastníci</a></mwc-list-item>
      <mwc-list-item><a href="/admin/?view=paid">Registrace</a></mwc-list-item>
      <mwc-list-item><a href="/admin/?view=program">Program</a></mwc-list-item>
      <mwc-list-item><a href="/admin/?view=housing">Ubytování</a></mwc-list-item>
    </mwc-list>
    <div class="mdc-layout-grid" slot="appContent">
      <div id="app-root" class="mdc-layout-grid__inner">
        <div
          class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12"
          style="display:flex; align-items: center; gap: 1em"
        >
          <mwc-icon-button
            slot="navigationIcon"
            icon="menu"
            id="drawer-button"
          ></mwc-icon-button>
          <h2 id="view-title">Administrace</h2>
        </div>
      </div>
    </div>
  </mwc-drawer>
{% endblock %}

{% block javascript %}
<script type="module">
  import { main } from "/assets/esm/admin.js";
  main({
    searchParams: new URLSearchParams(location.search),
    appRoot: document.getElementById("app-root"),
    viewTitle: document.getElementById("view-title"),
    env: {{ build | dump(8) | safe }}
  });
  const drawer = document.getElementById("drawer");
  const drawerBtn = document.getElementById("drawer-button");
  drawerBtn.addEventListener("click", () => { drawer.open = !drawer.open; });
</script>
{% endblock %}
