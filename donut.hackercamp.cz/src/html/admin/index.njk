{% extends "layouts/application.njk" %}

{% block title %}Administrace Hacker Campu{% endblock %}

{% block head %}
  <style>
    table {
      font-size: 14px;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px;
    }
    thead th {
      text-align: left;
      border-bottom: 3px double #ddd;
    }
    tbody tr:hover {
      background-color: #e3f1fb;
    }
    tbody td {
      border-bottom: 1px solid #ddd;
    }
    .hc-master-detail {
      display: flex;
    }
  </style>
{% endblock %}

{% block content %}
  <div id="app-root"></div>
{% endblock %}

{% block javascript %}
<script type="module">
  import { main } from "/assets/esm/admin.js";
  main({
    searchParams: new URLSearchParams(location.search),
    appRoot: document.getElementById("app-root"),
    env: {{ build | dump(8) | safe }}
  });
</script>
{% endblock %}
